/* 模态弹窗 */
.modal-title {
    position: absolute;
    text-align: center;
    /* width: calc(100% - 340rpx); */
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    margin: auto;
    height: 60rpx;
    font-size: 32rpx;
    line-height: 60rpx;
    cursor: none;
    pointer-events: none;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    color: black;
    font-weight: bold;
}

.modal-btn {
    width: 50%;
    margin-top: 5px;
    line-height: 45px;
    display: inline-block;
}

