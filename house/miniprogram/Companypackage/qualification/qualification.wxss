.content-box {
    /* height: 120px; *//* margin: 5px;
    border-radius: 5rpx; */
    margin: 15px;
    padding: 15px 20px 10px 20px;
    border: 1px solid rgba(39, 48, 57, 0.08);
    box-shadow: 10px 10px 5px rgba(39, 48, 57, 0.05);
    border-radius: 17px;
    background-color: #fff;
}

.content-title {
    padding: 6px;
    font-size: 14px;
    font-weight: bold;
}

.content-text {
    font-size: 12px;
    padding: 8px;
}

.content-photo {
    height: 230px;
    margin-bottom: 15px;
    text-align: center;
}

.content-photo image{
    width: 100%;
    height: 230px;
    border-radius: 10px;
}
